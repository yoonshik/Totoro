<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TotoroJumpActivity">

    <TextView android:text="@string/totoro_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <ImageView android:id="@+id/totoro_standing"
        android:src="@drawable/totoro_standing"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/totoro_standing_vertical_margin"

        />

    <ImageView android:id="@+id/totoro_umbrella"
        android:src="@drawable/totoro_umbrella"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/totoro_umbrella_vertical_margin"
        android:visibility="invisible"

        />

    <Button android:id="@+id/toggle_umbrella_button"
        android:text="@string/open_umbrella"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
        android:onClick="toggleUmbrella"
        />


</RelativeLayout>
